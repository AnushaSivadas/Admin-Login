<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/style.css" >
    <title>Admin Panel</title>
  </head>
  <body>
    <header>
<div class="topnav pb-2 ">
  
  <div class="search-container mx-5 float-left">
    <form action="/adminPanel">
      <input type="text" placeholder="username" name="username">
      <button class="search-btn" type="submit">Search</button>
    </form>
  </div>

  <div class="btn logout px-4 btn-primary mt-2 mx-5"><a href="/adminLogout">Logout</a></div>

</div>
</header>
<div class="text-center" style="padding-left: 300px;padding-right: 300px;">
<div class="mt-3">
  <%- include('partials/flash')%>
  </div>
</div>
<h2 class="text-center mt-3 fw-bold">ADMIN PANEL</h2>
<section class="container-fluid mt-3">
   <table class="table table-striped table-bordered">
    <thead >
      <tr>
        <th colspan="4">USER DATA collections</th>
        <th colspan="2" class="text-center"><a href="/createUser" class="float-center btn btn-success">CREATE USER</a></th>
      </tr>
      <tr class="table-dark text-center" >
        <th>NO</th>
        <th>USERNAME</th>
        <th>EMAIL</th>
        <th>PASSWORD</th>
        <th>DELETE</th>
        <th>EDIT</th>
      </tr>
    </thead>
    <tbody>
      <%for(var i =0 ; i< user.length ;i++) { %>
      <tr>
        <td><%= i+1 %>.</td>
        <td><%= user[i].username%></td>
        <td><%= user[i].email%></td>
        <td><%= user[i].password%></td>
        <td class="text-center"><form action="/deleteUser/<%= user[i]._id%>?_method=DELETE" method="POST"><button class="btn btn-danger" onclick="return confirm('Do you really want to delete <%= user.username%>?')">DELETE</button></form></td>
        <td class="text-center"><a href="/editUser/<%= user[i]._id%>" class="btn btn-warning">EDIT</a></td>     
      </tr>
       <% } %>
       <%if(username) { %>
      <tr>
        <td colspan="4"></td>
        <td colspan="2" class="text-center"><a href="/adminPanel" class="btn btn-primary">ALL USERS</a></td>
      </tr>
      <%}%>
    </tbody>
  </table>
</section>
